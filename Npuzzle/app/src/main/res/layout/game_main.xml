<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/game_main"
    android:background="@drawable/main_background"
    >

    <RelativeLayout
        android:id="@+id/Pinfo"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        >


        <Spinner
            android:id="@+id/ProwSize"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/Puzzle_Size"
            android:background="@drawable/myspinner"

            ></Spinner>

        <Spinner
            android:id="@+id/PcolSize"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ProwSize"
            android:background="@drawable/myspinner"

            ></Spinner>

        <TextView
            android:id="@+id/Puzzle_Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Puzzle Size :" />

        <TextView
            android:id="@+id/NumofMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="Number of moves :" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/myGrid"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="vertical"

        ></GridLayout>

    <RelativeLayout
        android:id="@+id/Hintlayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        >

        <Button
            android:id="@+id/Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint"
            android:background="@drawable/myspinner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>